<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" 
           xsi:type="MailApp">
  
  <!-- ID unique - NE CHANGEZ JAMAIS une fois déployé -->
  <Id>872a66d4-ca46-489f-92bc-dc493efc346e</Id>
  
  <!-- Version - Incrémentez à chaque mise à jour -->
  <Version>1.0.0.0</Version>
  
  <ProviderName>SGCI</ProviderName>
  
  <!-- Langue française par défaut -->
  <DefaultLocale>fr-FR</DefaultLocale>
  
  <!-- Nom et description clairs -->
  <DisplayName DefaultValue="Bravo et Merci - SGCI"/>
  <Description DefaultValue="Reconnaissez l'engagement et les contributions de vos collègues en quelques clics. Célébrez l'esprit d'équipe, l'innovation et les valeurs qui font notre force collective."/>
  
  <!-- REMPLACEZ par vos vraies URLs GitHub Pages -->
  <IconUrl DefaultValue="https://www.contoso.com/assets/Logo SGCI.jpeg"/>
  <HighResolutionIconUrl DefaultValue="https://www.contoso.com/assets/Logo SGCI.jpeg"/>
  <SupportUrl DefaultValue="https://www.contoso.com/help"/>
  
  <!-- Domaines autorisés -->
  <AppDomains>
    <AppDomain>https://www.contoso.com</AppDomain>
  </AppDomains>
  
  <!-- Seulement Outlook (Mailbox) -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <!-- Version minimale d'Outlook requise -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/> <!-- Changé de 1.1 à 1.5 pour plus de fonctionnalités -->
    </Sets>
  </Requirements>
  
  <!-- Configuration pour la lecture de messages -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://www.contoso.com/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight> <!-- Augmenté de 250 à 500 -->
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <!-- Permissions - ReadWriteItem permet de lire et modifier les emails -->
  <Permissions>ReadWriteItem</Permissions>
  
  <!-- Règles d'activation -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>
  
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  
  <!-- Configuration moderne (VersionOverrides) -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    
    <Requirements>
      <bt:Sets DefaultMinVersion="1.5"> <!-- ← Changé de 1.3 à 1.5 -->
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        
        <!-- Configuration Desktop -->
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          
          <!-- Bouton dans la composition de nouveaux messages -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="GroupLabel"/>
                
                <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
          <!-- Bouton dans la lecture de messages -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
        
        <!-- NOUVEAU : Support Mobile (optionnel) -->
        <!-- <MobileFormFactor>
          <FunctionFile resid="Commands.Url"/>
          
          <ExtensionPoint xsi:type="MobileMessageReadCommandSurface">
            <Group id="mobileMsgRead">
              <Label resid="GroupLabel"/>
              
              <Control xsi:type="MobileButton" id="mobileReadOpenPaneButton">
                <Label resid="TaskpaneButton.Label"/>
                <Icon>
                  <bt:Image size="25" resid="Icon.32x32"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="48" resid="Icon.80x80"/>
                </Icon>
                <Action xsi:type="ShowTaskpane">
                  <SourceLocation resid="Taskpane.Url"/>
                </Action>
              </Control>
            </Group>
          </ExtensionPoint>
        </MobileFormFactor> -->
        
      </Host>
    </Hosts>
    
    <!-- Ressources (URLs, icônes, textes) -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://www.contoso.com/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://www.contoso.com/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://www.contoso.com/assets/icon-80.png"/>
      </bt:Images>
      
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://www.contoso.com/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://www.contoso.com/taskpane.html"/>
      </bt:Urls>
      
      <!-- Textes en français -->
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Bravo et Merci"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Reconnaître un collègue"/>
        <bt:String id="ActionButton.Label" DefaultValue="Envoyer une reconnaissance"/>
      </bt:ShortStrings>
      
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Envoyez un Bravo ou un Merci à vos collègues pour célébrer leurs contributions et renforcer l'esprit d'équipe."/>
        <bt:String id="ActionButton.Tooltip" DefaultValue="Cliquez pour reconnaître les efforts de vos collègues"/>
      </bt:LongStrings>
    </Resources>
    
  </VersionOverrides>
</OfficeApp>